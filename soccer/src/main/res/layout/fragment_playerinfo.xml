<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.jk.soccer.etc.enumeration.Type"/>
        <variable
            name="viewModel"
            type="com.jk.soccer.viewModel.PlayerInfoViewModel" />
        <variable
            name="ID"
            type="Integer" />
        <variable
            name="parentID"
            type="Integer" />
        <variable
            name="name"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.PlayerInfoFragment">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="27dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="@integer/column">

                <TextView
                    android:id="@+id/tbl_20"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column0"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="end|center_vertical"
                    android:text="@string/shirt_header" />

                <TextView
                    android:id="@+id/tbl_21"
                    android:text="@{viewModel.shirt}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column1"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="@integer/column">

                <TextView
                    android:id="@+id/tbl_30"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column0"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="end|center_vertical"
                    android:text="@string/position_header" />

                <TextView
                    android:id="@+id/tbl_31"
                    android:text="@{viewModel.position}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column1"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="@integer/column">

                <TextView
                    android:id="@+id/tbl_40"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column0"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="end|center_vertical"
                    android:text="@string/foot_header" />

                <TextView
                    android:id="@+id/tbl_41"
                    android:text="@{viewModel.foot}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column1"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="@integer/column">

                <TextView
                    android:id="@+id/tbl_50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column0"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="end|center_vertical"
                    android:text="@string/height_header" />

                <TextView
                    android:id="@+id/tbl_51"
                    android:layout_width="wrap_content"
                    android:text="@{viewModel.height}"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column1"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="@integer/column">

                <TextView
                    android:id="@+id/tbl_60"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column0"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="end|center_vertical"
                    android:text="@string/age_header" />

                <TextView
                    android:id="@+id/tbl_61"
                    android:layout_width="wrap_content"
                    android:text="@{viewModel.age}"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/column1"
                    android:textSize="@dimen/midBigFont"
                    android:textColor="@color/black"
                    android:fontFamily="@font/paybooc"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="@integer/column"/>

        </TableLayout>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/contentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <include
            android:id="@+id/img_player"
            layout="@layout/txt_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            app:ID="@{ID.toString()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:name="@{name}"
            app:type="@{Type.PERSON}" />

        <include
            android:id="@+id/img_team"
            layout="@layout/txt_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:ID="@{parentID.toString()}"
            app:layout_constraintBottom_toTopOf="@+id/table"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_player"
            app:layout_constraintWidth_percent="0.5"
            app:name="@{viewModel.team}"
            app:type="@{Type.TEAM}" />

        <include
            android:id="@+id/img_country"
            layout="@layout/txt_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:ID="@{viewModel.countryID}"
            app:layout_constraintBottom_toBottomOf="@+id/img_team"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toTopOf="@+id/img_team"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.5"
            app:name="@{viewModel.country}"
            app:type="@{Type.COUNTRY}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
