<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.jk.soccer.model.local.TableTeam" />
        <variable
            name="index"
            type="Integer" />
        <variable
            name="handler"
            type="com.jk.soccer.etc.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/edge"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/txt_team"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:gravity="center"
            android:text="@{item.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/midBigFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toEndOf="@+id/img_team"
            app:layout_constraintWidth_percent="0.65" />

        <ImageView
            android:id="@+id/img_team"
            android:contentDescription="@string/contentDescription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            glideUrl="@{@string/team_image_url + item.ID}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:srcCompat="@drawable/edge" />

        <TextView
            android:id="@+id/txt_rank"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            android:fontFamily="@font/paybooc"
            android:gravity="center"
            android:text="@{item.rank.toString()}"
            android:textColor="@color/black"
            android:textSize="@dimen/midFont"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintStart_toEndOf="@+id/img_team"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.65" />

        <ImageButton
            android:id="@+id/imageButton2"
            app:layout_constraintWidth_percent="0.15"
            android:contentDescription="@string/contentDescription"
            android:onClick="@{(v)->handler.onClick(v, index)}"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_search_category_default" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
