<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.jk.soccer.etc.Role"/>
        <variable
            name="item"
            type="com.jk.soccer.model.local.TablePlayer" />
        <variable
            name="index"
            type="Integer" />
        <variable
            name="handler"
            type="com.jk.soccer.viewModel.SearchViewModel.Handler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img_player"
            glideUrl="@{@string/baseUrl2 + item.ID + @string/png}"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/contentDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:srcCompat="@color/white"
            tools:layout_editor_absoluteY="3dp" />

        <TextView
            android:id="@+id/txt_player"
            roleColor="@{item.role}"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="@{(v)->handler.setIndex(index)}"
            android:text="@{item.name}"
            android:textColor="@color/black"
            android:textSize="@dimen/midBigFont"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7"
            tools:layout_editor_absoluteY="3dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
