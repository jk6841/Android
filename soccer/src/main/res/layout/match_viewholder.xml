<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.jk.soccer.data.local.TableMatch" />
        <variable
            name="index"
            type="Integer" />
        <variable
            name="handler"
            type="com.jk.soccer.ui.MyHandler" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@{(index % 2 == 0)? @color/skyBlue : @color/lightGreen}"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rec_item_height"
        android:onClick="@{(v)->handler.onMatchListClick(v, index)}">

        <ImageView
            android:id="@+id/img_away"
            android:layout_width="@dimen/small_image_width"
            android:layout_height="@dimen/small_image_height"
            android:layout_marginEnd="@dimen/img_horizontal_margin"
            android:contentDescription="@string/contentDescription"
            glideUrl="@{@string/baseUrl1 + item.awayImage}"
            app:layout_constraintBottom_toBottomOf="@+id/img_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_home"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/img_home"
            glideUrl="@{@string/baseUrl1 + item.homeImage}"
            android:layout_width="@dimen/small_image_width"
            android:layout_height="@dimen/small_image_height"
            android:layout_marginStart="@dimen/img_horizontal_margin"
            android:contentDescription="@string/contentDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_info_height"
            android:layout_marginStart="@dimen/txt_horizontal_margin"
            android:layout_marginTop="12dp"
            android:gravity="start"
            android:text="@{item.homeName}"
            android:textSize="@dimen/midFont"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/tv_away"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_info_height"
            android:gravity="end"
            android:text="@{item.awayName}"
            android:textSize="@dimen/midFont"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/txt_horizontal_margin"
            app:layout_constraintWidth_percent="0.45"
            app:layout_constraintBottom_toBottomOf="@+id/tv_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_home"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_vs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_info_height"
            android:layout_marginTop="12dp"
            android:gravity="center"
            scoreText="@{item}"
            android:textSize="@dimen/bigFont"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/img_away"
            app:layout_constraintStart_toEndOf="@+id/img_home"
            app:layout_constraintTop_toBottomOf="@+id/tv_home" />

        <TextView
            android:id="@+id/tv_time"
            timeText="@{item}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="@dimen/midFont"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_home"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@{item.stadium}"
            android:textSize="@dimen/midFont"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_time"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@{item.name}"
            android:textSize="@dimen/midFont"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
