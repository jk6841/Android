<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.jk.soccer.viewModel.SearchViewModel" />
        <variable
            name="handler"
            type="com.jk.soccer.etc.MyHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLeague"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            app:handler="@{viewModel.leagueIndexManager}"
            app:holder="@{@layout/viewholder_league}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:list="@{viewModel.leagueList}" />

        <TextView
            android:id="@+id/tvLeague"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@{(viewModel.leagueIndex > -1)? viewModel.leagueList.get(viewModel.leagueIndex).name : @string/empty}"
            android:background="@drawable/edge"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:textSize="@dimen/midBigFont"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvLeague" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTeam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:list="@{viewModel.teamList}"
            app:handler="@{viewModel.teamIndexManager}"
            app:holder="@{@layout/viewholder_team}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:background="@drawable/edge"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLeague" />

        <TextView
            android:id="@+id/tvTeam"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@{(viewModel.teamIndex > -1)? viewModel.teamList.get(viewModel.teamIndex).name : @string/empty}"
            android:background="@drawable/edge"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:textSize="@dimen/midBigFont"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvTeam" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlayer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/edge"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:list="@{viewModel.playerList}"
            app:holder="@{@layout/viewholder_player}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
