<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.jk.soccer.etc.Lineup" />
        <variable
            name="index"
            type="Integer" />
        <variable
            name="handler"
            type="com.jk.soccer.etc.MyHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@{(item.position == 0)? @color/white : (item.position == 1)? @color/orange : (item.position == 2)? @color/skyBlue : (item.position == 3)? @color/lightGreen : @color/red}">

        <TextView
            android:id="@+id/lineup_shirt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/edge"
            android:gravity="center"
            android:text="@{(item.shirt == 0)? @string/coach : item.shirt.toString()}"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/lineup_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/edge"
            android:gravity="center"
            android:text="@{item.name}"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lineup_shirt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
