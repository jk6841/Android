<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.jk.price.MainViewModel" />
        <variable
            name="onButtonPress"
            type="com.jk.price.fragment.main.MainFragment.OnButtonPress" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.main.MainFragment">

        <include
            layout="@layout/calc"
            app:operand1="@{viewModel.operand0.string}"
            app:operand2="@{viewModel.operand1.string}"
            app:result="@{viewModel.result.string}"
            app:operator="@{viewModel.operatorString}"
            app:onButtonPress="@{onButtonPress}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
