<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.jk.price.SaveViewModel" />
        <variable
            name="myResource"
            type="com.jk.price.MyResource" />
        <variable
            name="saveOnClickListener"
            type="android.view.View.OnClickListener" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/dateHeader"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.date}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/dateSpinner"
                    layout="@layout/date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateHeader"
                    app:layout_constraintWidth_percent="0.7"
                    app:viewModel="@{viewModel}" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/marketContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateContainer"
                app:layout_constraintWidth_percent="0.33">

                <TextView
                    android:id="@+id/marketHeader"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.market}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/market"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@{myResource.emptyString}"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:nextFocusDown="@id/type"
                    android:text="@={viewModel.market}"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/marketHeader"
                    app:layout_constraintWidth_percent="0.1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/marketContainer"
                app:layout_constraintWidth_percent="0.66">

                <TextView
                    android:id="@+id/typeHeader"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.type}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <EditText
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@{myResource.emptyString}"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:nextFocusDown="@id/name"
                    android:text="@={viewModel.type}"
                    android:textColor="@color/black"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/typeHeader"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/nameHeader"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.name}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@{myResource.emptyString}"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:nextFocusDown="@id/cost"
                    android:text="@={viewModel.name}"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintTop_toBottomOf="@+id/nameHeader"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/costContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productContainer">

                <TextView
                    android:id="@+id/totalCostHeader"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.cost}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <EditText
                    android:id="@+id/cost"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@{myResource.emptyString}"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:nextFocusDown="@id/count"
                    android:text="@={viewModel.cost}"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/totalCostHeader"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="@+id/totalCostHeader"
                    app:layout_constraintTop_toBottomOf="@+id/totalCostHeader"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/countHeader"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.count}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/totalCostHeader"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <EditText
                    android:id="@+id/count"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@{myResource.emptyString}"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:text="@={viewModel.count}"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/countHeader"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="@+id/countHeader"
                    app:layout_constraintTop_toBottomOf="@+id/countHeader"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/unitCostHeader"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.unitCost}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/unitHeader"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/unitCost"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="@{viewModel.unitCost}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/unitCostHeader"
                    app:layout_constraintStart_toStartOf="@+id/unitCostHeader"
                    app:layout_constraintTop_toBottomOf="@+id/unitCostHeader"
                    app:layout_constraintWidth_percent="0.25" />

                <TextView
                    android:id="@+id/unitHeader"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.unit}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <Spinner
                    android:id="@+id/unitSpinner"
                    style="@style/Widget.AppCompat.TextView.SpinnerItem"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/edge"
                    android:entries="@{myResource.unitList}"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="@+id/unitHeader"
                    app:layout_constraintStart_toStartOf="@+id/unitHeader"
                    app:layout_constraintTop_toBottomOf="@+id/unitHeader"
                    app:layout_constraintWidth_percent="0.25" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/memoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/costContainer">

                <TextView
                    android:id="@+id/memoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edge_gray"
                    android:gravity="center"
                    android:text="@{myResource.memo}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="@={viewModel.memo}"
                    android:background="@drawable/edge"
                    android:hint="@{myResource.emptyString}"
                    android:importantForAutofill="no"
                    android:scrollbars="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/memoHeader" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@color/skyBlue"
                android:clickable="@{viewModel.saveEnable}"
                android:onClick="@{saveOnClickListener}"
                android:text="@{myResource.save}"
                android:textColor="@color/white"
                android:visibility="@{viewModel.saveEnable? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoContainer"
                app:layout_constraintWidth_percent="0.8" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
